                <span>Other</span>
            </label>
        </div>
        <textarea id="reportDescription" class="report-description" placeholder="Additional details (optional)..."></textarea>
        <div class="modal-footer">
            <button class="btn-cancel" onclick="closeReportModal()">Cancel</button>
            <button class="btn-submit" onclick="submitReport()">Submit Report</button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentPage = 1;
        let currentFilter = 'all';
        let isLoading = false;
        let hasNextPage = true;
        let currentBlogId = null;
        let currentReportData = {};

        $(document).ready(function() {
            loadFeed();

            // Filter tabs
            $('.filter-tab').click(function() {
                $('.filter-tab').removeClass('active');
                $(this).addClass('active');
                currentFilter = $(this).data('filter');
                currentPage = 1;
                $('#feedContainer').html('<div class="loading-spinner"><div class="spinner"></div><p>Loading...</p></div>');
                loadFeed();
            });

            // Infinite scroll
            $(window).scroll(function() {
                if ($(window).scrollTop() + $(window).height() > $(document).height() - 500) {
                    if (!isLoading && hasNextPage) {
                        currentPage++;
                        loadFeed(true);
                    }
                }
            });
        });

        function loadFeed(append = false) {
            if (isLoading) return;
            isLoading = true;

            let endpoint = '/Blog/GetFeed';
            debugger;
            if (currentFilter === 'trending') {
                endpoint = '/Blog/Trending';
            }

            $.ajax({
                url: endpoint,
                type: 'GET',
                data: { page: currentPage, pageSize: 10 },
                success: function(response) {
                    if (response.success) {
                        if (!append) {
                            $('#feedContainer').html('');
                        }

                        if (response.blogs.length === 0 && currentPage === 1) {
                            $('#feedContainer').html(`
                                <div class="no-blogs">
                                    <i class="fas fa-newspaper"></i>
                                    <h3>No blogs yet</h3>
                                    <p>Start creating content or follow users to see their blogs here!</p>
                                </div>
                            `);
                        } else {
                            response.blogs.forEach(blog => {
                                renderBlogCard(blog);
                            });
                        }

                        hasNextPage = response.hasNextPage;
                    } else {
                        alert(response.message);
                    }
                    isLoading = false;
                },
                error: function(xhr) {
                    alert('Error loading feed');
                    isLoading = false;
                }
            });
        }

        function renderBlogCard(blog) {
            debugger;
            const excerpt = blog.content.length > 200 ? blog.content.substring(0, 200) + '...' : blog.content;
            const imageHtml = blog.imageUrl ? `<img src="${blog.imageUrl}" class="blog-image" alt="${blog.title}">` : '';
            const avatarUrl = blog.authorProfilePicture || '/images/default-avatar.png';
            
            const cardHtml = `
                <div class="blog-card" data-blog-id="${blog.blogId}">
                    <div class="blog-header">
                        <img src="${avatarUrl}" class="author-avatar" alt="${blog.authorName}">
                        <div class="author-info">
                            <div class="author-name">${blog.authorName}</div>
                            <div class="blog-meta">
                                ${formatDate(blog.createdAt)} · ${blog.viewCount} views
                            </div>
                        </div>
                        <button class="follow-btn ${blog.isFollowingAuthor ? 'following' : ''}" 
                                onclick="toggleFollow(${blog.userId}, this)" 
                                data-user-id="${blog.userId}">
                            ${blog.isFollowingAuthor ? 'Following' : 'Follow'}
                        </button>
                    </div>

                    ${imageHtml}

                    <div class="blog-content">
                        <span class="category-badge">${blog.categoryName}</span>
                        <h2 class="blog-title" onclick="viewBlog(${blog.blogId})">${blog.title}</h2>
                        <p class="blog-excerpt">${excerpt}</p>
                    </div>

                    <div class="blog-actions">
                        <button class="action-btn ${blog.isLikedByCurrentUser ? 'liked' : ''}" 
                                onclick="toggleLike(${blog.blogId}, this)">
                            <i class="fas fa-heart"></i>
                            <span class="like-count">${blog.likeCount}</span>
                        </button>
                        <button class="action-btn" onclick="openCommentModal(${blog.blogId})">
                            <i class="fas fa-comment"></i>
                            <span>${blog.commentCount}</span>
                        </button>
                        <button class="action-btn" onclick="sharePost(${blog.blogId})">
                            <i class="fas fa-share"></i>
                            <span>${blog.shareCount}</span>
                        </button>
                        <button class="action-btn" onclick="openReportModal(${blog.blogId}, ${blog.userId})">
                            <i class="fas fa-flag"></i>
                        </button>
                    </div>
                </div>
            `;

            $('#feedContainer').append(cardHtml);
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            const now = new Date();
            const diff = Math.floor((now - date) / 1000); // seconds

            if (diff < 60) return 'Just now';
            if (diff < 3600) return Math.floor(diff / 60) + 'm ago';
            if (diff < 86400) return Math.floor(diff / 3600) + 'h ago';
            if (diff < 604800) return Math.floor(diff / 86400) + 'd ago';
            
            return date.toLocaleDateString();
        }

        function viewBlog(blogId) {
            window.location.href = `/Blog/Details/${blogId}`;
        }

        // ==================== LIKE FUNCTIONALITY ====================
        function toggleLike(blogId, button) {
            const isLiked = $(button).hasClass('liked');
            const endpoint = isLiked ? '/Blog/Unlike' : '/Blog/Like';

            $.ajax({
                url: endpoint,
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(blogId),
                success: function(response) {
                    if (response.success) {
                        if (isLiked) {
                            $(button).removeClass('liked');
                            const count = parseInt($(button).find('.like-count').text());
                            $(button).find('.like-count').text(count - 1);
                        } else {
                            $(button).addClass('liked');
                            const count = parseInt($(button).find('.like-count').text());
                            $(button).find('.like-count').text(count + 1);
                        }
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Error processing like');
                }
            });
        }

        // ==================== COMMENT FUNCTIONALITY ====================
        function openCommentModal(blogId) {
            currentBlogId = blogId;
            $('#commentText').val('');
            $('#commentModal').fadeIn();
        }

        function closeCommentModal() {
            $('#commentModal').fadeOut();
            currentBlogId = null;
        }

        function submitComment() {
            const content = $('#commentText').val().trim();
            
            if (!content) {
                alert('Please enter a comment');
                return;
            }

            const commentData = {
                blogId: currentBlogId,
                content: content
            };

            $.ajax({
                url: '/Blog/AddComment',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(commentData),
                success: function(response) {
                    if (response.success) {
                        // Update comment count
                        const card = $(`.blog-card[data-blog-id="${currentBlogId}"]`);
                        const commentBtn = card.find('.action-btn').eq(1);
                        const currentCount = parseInt(commentBtn.find('span').text());
                        commentBtn.find('span').text(currentCount + 1);

                        closeCommentModal();
                        alert('Comment added successfully!');
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Error adding comment');
                }
            });
        }
      


        //==================== SHARE FUNCTIONALITY ====================
        function sharePost(blogId) {
            const blogUrl = `${window.location.origin}/Blog/Details/${blogId}`;
            
            // Copy to clipboard
            navigator.clipboard.writeText(blogUrl).then(function() {
                // Record share action
                $.ajax({
                    url: '/Blog/RecordShare',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(blogId),
                    success: function(response) {
                        if (response.success) {
                            // Update share count
                            const card = $(`.blog-card[data-blog-id="${blogId}"]`);
                            const shareBtn = card.find('.action-btn').eq(2);
                            const currentCount = parseInt(shareBtn.find('span').text());
                            shareBtn.find('span').text(currentCount + 1);

                            // Show success message
                            alert('Link copied to clipboard!');
                        }
                    }
                });
            }).catch(function() {
                alert('Failed to copy link');
            });
        }

        // ==================== FOLLOW FUNCTIONALITY ====================
        function toggleFollow(authorUserId, button) {
            const isFollowing = $(button).hasClass('following');
            const endpoint = isFollowing ? '/Blog/UnfollowUser' : '/Blog/FollowUser';

            $.ajax({
                url: endpoint,
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(authorUserId),
                success: function(response) {
                    if (response.success) {
                        if (isFollowing) {
                            $(button).removeClass('following').text('Follow');
                        } else {
                            $(button).addClass('following').text('Following');
                        }
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Error processing follow request');
                }
            });
        }

        // ==================== REPORT FUNCTIONALITY ====================
        function openReportModal(blogId, reportedUserId) {
            currentReportData = {
                blogId: blogId,
                reportedUserId: reportedUserId
            };
            $('input[name="reportReason"]').prop('checked', false);
            $('#reportDescription').val('');
            $('#reportModal').fadeIn();
        }

        function closeReportModal() {
            $('#reportModal').fadeOut();
            currentReportData = {};
        }

        function submitReport() {
            const selectedReason = $('input[name="reportReason"]:checked').val();

            if (!selectedReason) {
                alert('Please select a reason for reporting');
                return;
            }

            const reportData = {
                blogId: currentReportData.blogId,
                reportedUserId: currentReportData.reportedUserId,
                reason: selectedReason,
                description: $('#reportDescription').val()
            };

            $.ajax({
                url: '/Blog/ReportContent',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(reportData),
                success: function(response) {
                    if (response.success) {
                        alert(response.message);
                        closeReportModal();
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Error submitting report');
                }
            });
        }

        // Close modals when clicking outside
        window.onclick = function(event) {
            if (event.target.id === 'commentModal') {
                closeCommentModal();
            }
            if (event.target.id === 'reportModal') {
                closeReportModal();
            }
        }
    </script>
}
     
