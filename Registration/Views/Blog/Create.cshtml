    <!-- Cropper.js Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.js"></script>

    <script>
        let cropper = null;
        let croppedBlob = null;
        let scaleX = 1;
        let scaleY = 1;

        $(document).ready(function() {
            // Character count for title
            $('#blogTitle').on('input', function() {
                const length = $(this).val().length;
                $('#titleCount').text(length);
            });

            // Image selection - Open cropper modal
            $('#imageInput').on('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    if (file.size > 10 * 1024 * 1024) {
                        alert('File size must be less than 10MB');
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#imageToCrop').attr('src', e.target.result);
                        openCropperModal();
                    }
                    reader.readAsDataURL(file);
                }
            });

            // Aspect ratio buttons
            $('.aspect-btn').on('click', function() {
                $('.aspect-btn').removeClass('active');
                $(this).addClass('active');

                const aspectRatio = $(this).data('aspect');

                if (cropper) {
                    if (aspectRatio === 'free') {
                        cropper.setAspectRatio(NaN);
                    } else {
                        const [width, height] = aspectRatio.split('/').map(Number);
                        cropper.setAspectRatio(width / height);
                    }
                }
            });

            // Form submission
            $('#createBlogForm').on('submit', function(e) {
                e.preventDefault();

                const title = $('#blogTitle').val().trim();
                const categoryId = $('#blogCategory').val();
                const content = $('#blogContent').val().trim();

                if (!title || !categoryId || !content) {
                    alert('Please fill in all required fields');
                    return;
                }

                const formData = new FormData(this);

                // Replace the original file with cropped image if exists
                if (croppedBlob) {
                    formData.delete('imageFile');
                    formData.append('imageFile', croppedBlob, 'cropped-image.jpg');
                }

                $('#publishBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Publishing...');

                $.ajax({
                    url: '/Blog/Create',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        if (response.success) {
                            alert('Blog published successfully!');
                            window.location.href = '/Blog/Details/' + response.blogId;
                        } else {
                            alert(response.message);
                            $('#publishBtn').prop('disabled', false).html('<i class="fas fa-paper-plane"></i> Publish Blog');
                        }
                    },
                    error: function() {
                        alert('Error publishing blog');
                        $('#publishBtn').prop('disabled', false).html('<i class="fas fa-paper-plane"></i> Publish Blog');
                    }
                });
            });
        });

        function openCropperModal() {
            $('#cropperModal').fadeIn();

            // Initialize Cropper.js
            const image = document.getElementById('imageToCrop');

            if (cropper) {
                cropper.destroy();
            }

            cropper = new Cropper(image, {
                aspectRatio: NaN, // Free crop by default
                viewMode: 1,
                dragMode: 'move',
                autoCropArea: 0.8,
                restore: false,
                guides: true,
                center: true,
                highlight: true,
                cropBoxMovable: true,
                cropBoxResizable: true,
                toggleDragModeOnDblclick: false,
                responsive: true,
                background: false,
                modal: true,
                zoomable: true,
                zoomOnWheel: true,
                wheelZoomRatio: 0.1,
            });

            // Reset scale values
            scaleX = 1;
            scaleY = 1;
        }

        function closeCropperModal() {
            $('#cropperModal').fadeOut();
            if (cropper) {
                cropper.destroy();
                cropper = null;
            }
            // Reset file input if user cancels
            if (!croppedBlob) {
                $('#imageInput').val('');
            }
        }

        function zoomIn() {
            if (cropper) {
                cropper.zoom(0.1);
            }
        }

        function zoomOut() {
            if (cropper) {
                cropper.zoom(-0.1);
            }
        }

        function rotateLeft() {
            if (cropper) {
                cropper.rotate(-45);
            }
        }

        function rotateRight() {
            if (cropper) {
                cropper.rotate(45);
            }
        }

        function flipHorizontal() {
            if (cropper) {
                scaleX = -scaleX;
                cropper.scaleX(scaleX);
            }
        }

        function flipVertical() {
            if (cropper) {
                scaleY = -scaleY;
                cropper.scaleY(scaleY);
            }
        }

        function resetCropper() {
            if (cropper) {
                cropper.reset();
                scaleX = 1;
                scaleY = 1;
            }
        }

        function applyCrop() {
            if (!cropper) return;

            // Get cropped canvas
            const canvas = cropper.getCroppedCanvas({
                maxWidth: 1920,
                maxHeight: 1080,
                imageSmoothingEnabled: true,
                imageSmoothingQuality: 'high',
            });

            // Convert to blob
            canvas.toBlob(function(blob) {
                croppedBlob = blob;

                // Show preview
                const url = URL.createObjectURL(blob);
                $('#finalPreviewImg').attr('src', url);
                $('#croppedPreview').fadeIn();

                // Close modal
                closeCropperModal();
            }, 'image/jpeg', 1.0);
        }

        function cancelCreate() {
            if (confirm('Are you sure you want to cancel? Any unsaved changes will be lost.')) {
                window.location.href = '/Blog/Index';
            }
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            if (event.target.id === 'cropperModal') {
                closeCropperModal();
            }
        }
    </script>
} *@


