<div class="create-container">
    <div class="create-card">
        <div class="create-header">
            <h1>Create New Blog</h1>
            <p>Share your thoughts and ideas with the community</p>
        </div>

        <form id="createBlogForm" enctype="multipart/form-data">
            <div class="form-group-create">
                <label class="form-label-create">Title *</label>
                <input type="text" id="blogTitle" name="title" class="form-input-create"
                       placeholder="Enter an engaging title..." maxlength="200" required>
                <div class="char-count">
                    <span id="titleCount">0</span>/200 characters
                </div>
            </div>

            <div class="form-group-create">
                <label class="form-label-create">Category *</label>
                <select id="blogCategory" name="categoryId" class="form-select-create" required>
                    <option value="">Select a category</option>
                    @foreach (var category in ViewBag.Categories as List<Registration.Models.Category>)
                    {
                        <option value="@category.CategoryId">@category.CategoryName</option>
                    }
                </select>
            </div>

            <div class="form-group-create">
                <label class="form-label-create">Cover Image</label>
                <div class="image-upload-area" onclick="document.getElementById('imageInput').click()">
                    <i class="fas fa-cloud-upload-alt"></i>
                    <p>Click to upload cover image</p>
                    <small>JPG, PNG, GIF up to 10MB</small>
                </div>
                <input type="file" id="imageInput" name="imageFile" accept="image/*" style="display:none;">
                <div class="image-preview" id="imagePreview">
                    <img id="previewImg" src="" alt="Preview">
                </div>
            </div>

            <div class="form-group-create">
                <label class="form-label-create">Content *</label>
                <textarea id="blogContent" name="content" class="form-input-create form-textarea-create"
                          placeholder="Write your blog content here..." required></textarea>
            </div>

            <div class="form-group-create">
                <label class="form-label-create">Tags (Optional)</label>
                <input type="text" id="blogTags" name="tags" class="form-input-create"
                       placeholder="Enter tags separated by commas (e.g., technology, coding, web)">
            </div>

            <div class="form-actions">
                <button type="button" class="btn-cancel-create" onclick="cancelCreate()">Cancel</button>
                <button type="submit" class="btn-publish" id="publishBtn">
                    <i class="fas fa-paper-plane"></i> Publish Blog
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Character count for title
            $('#blogTitle').on('input', function() {
                const length = $(this).val().length;
                $('#titleCount').text(length);
            });

            // Image preview
            $('#imageInput').on('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#previewImg').attr('src', e.target.result);
                        $('#imagePreview').fadeIn();
                    }
                    reader.readAsDataURL(file);
                }
            });

            // Form submission
            $('#createBlogForm').on('submit', function(e) {
                e.preventDefault();

                const title = $('#blogTitle').val().trim();
                const categoryId = $('#blogCategory').val();
                const content = $('#blogContent').val().trim();

                if (!title || !categoryId || !content) {
                    alert('Please fill in all required fields');
                    return;
                }

                const formData = new FormData(this);

                $('#publishBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Publishing...');

                $.ajax({
                    url: '/Blog/Create',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        if (response.success) {
                            alert('Blog published successfully!');
                            window.location.href = '/Blog/Details/' + response.blogId;
                        } else {
                            alert(response.message);
                            $('#publishBtn').prop('disabled', false).html('<i class="fas fa-paper-plane"></i> Publish Blog');
                        }
                    },
                    error: function() {
                        alert('Error publishing blog');
                        $('#publishBtn').prop('disabled', false).html('<i class="fas fa-paper-plane"></i> Publish Blog');
                    }
                });
            });
        });

        function cancelCreate() {
            if (confirm('Are you sure you want to cancel? Any unsaved changes will be lost.')) {
                window.location.href = '/Blog/Index';
            }
        }
    </script>
} 

